#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install rclone"
FILE="fclone-v0.3.1-freebsd-amd64"
DOWNLOAD_URL="https://github.com/mawaya/rclone/releases/download/fclone-v0.3.1/fclone-v0.3.1-freebsd-amd64.zip"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

wget -q $DOWNLOAD_URL
unzip -qqj $FILE.zip
export PATH=$PWD:$PATH
chmod 777 /app/rclone
rm -rf $FILE.zip
